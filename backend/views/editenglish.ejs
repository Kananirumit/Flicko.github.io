<div class="container mt-5">
    <h2 class="text-center">Edit Movie</h2>
  
    <form action="/hollywood/update/<%= english._id %>" method="POST">
      <div class="row">
        
        <!-- Poster Preview -->
        <div class="col-md-4 text-center">
          <label for="poster" class="form-label">Movie Poster</label>
          <br>
          <img id="posterPreview" src="<%= english.posterUrl || '/assets/img/default-poster.jpg' %>" 
               alt="Movie Poster" width="200" class="img-thumbnail">
        </div>
  
        <div class="col-md-8">
          <!-- Movie Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= english.title %>" required>
          </div>
  
          <!-- Rating -->
          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="number" step="0.1" class="form-control" id="rating" name="rating" 
                   value="<%= english.rating %>" required>
          </div>
  
          <!-- Genres -->
          <div class="mb-3">
            <label for="genre" class="form-label">Genres (comma-separated)</label>
            <input type="text" class="form-control" id="genre" name="genre" 
                   value="<%= english.genre %>" required>
          </div>
  
          <!-- Cast -->
          <div class="mb-3">
            <label for="cast" class="form-label">Cast</label>
            <input type="text" class="form-control" id="cast" name="cast" value="<%= english.cast %>" required>
          </div>
  
          <!-- Runtime -->
          <div class="mb-3">
            <label for="runtime" class="form-label">Runtime (minutes)</label>
            <input type="number" class="form-control" id="runtime" name="runtime" 
                   value="<%= english.runtime %>" required>
          </div>
  
          <!-- Submit & Cancel -->
          <div class="mb-3">
            <button type="submit" class="btn btn-primary">Update Movie</button>
            <a href="/hollywood" class="btn btn-secondary">Cancel</a>
          </div>
        </div>
  
      </div>
    </form>
  </div>
  