<div class="container mt-5">
    <h2 class="text-center">Edit Movie</h2>
  
    <form action="/indian/update/<%= indian._id %>" method="POST">
      <div class="row">
        
        <!-- Poster Preview -->
        <div class="col-md-4 text-center">
          <label for="poster" class="form-label">Movie Poster</label>
          <br>
          <img id="posterPreview" src="<%= indian.posterUrl || '/assets/img/default-poster.jpg' %>" 
               alt="Movie Poster" width="200" class="img-thumbnail">
        </div>
  
        <div class="col-md-8">
          <!-- Movie Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="title" value="<%= indian.title %>" required>
          </div>
  
          <!-- Rating -->
          <div class="mb-3">
            <label for="year" class="form-label">Year</label>
            <input type="number" step="0.1" class="form-control" id="year" name="year" 
                   value="<%= indian.rating %>" required>
          </div>
  
          <!-- Genres -->
          <div class="mb-3">
            <label for="genre" class="form-label">Genres (comma-separated)</label>
            <input type="text" class="form-control" id="genre" name="genre" 
                   value="<%= indian.genre %>" required>
          </div>
  
          <div class="mb-3">
            <label for="director" class="form-label">Director</label>
            <input type="text" class="form-control" id="director" name="director" value="<%= indian.cast %>" required>
          </div>
          <!-- Cast -->
          <div class="mb-3">
            <label for="cast" class="form-label">Cast</label>
            <input type="text" class="form-control" id="cast" name="cast" value="<%= indian.cast %>" required>
          </div>
  
          <!-- Runtime -->
          <div class="mb-3">
            <label for="overview" class="form-label">overview</label>
            <input type="text" class="form-control" id="overview" name="overview" 
                   value="<%= indian.runtime %>" required>
          </div>
  
          <!-- Submit & Cancel -->
          <div class="mb-3">
            <button type="submit" class="btn btn-primary">Update Movie</button>
            <a href="/indian" class="btn btn-secondary">Cancel</a>
          </div>
        </div>
  
      </div>
    </form>
  </div>
  