<div class="container mt-5">
  <h2 class="text-center">Edit Webseries</h2>

  <form action="/webseries/update/<%= webseries._id %>" method="POST">
    <div class="row">
      <!-- Poster Preview -->
      <div class="col-md-4 text-center">
        <label for="poster" class="form-label">Movie Poster</label>
        <br />
        <img
          id="posterPreview"
          src="<%= webseries.posterUrl || '/assets/img/default-poster.jpg' %>"
          alt="Movie Poster"
          width="200"
          class="img-thumbnail"
        />
      </div>

      <div class="col-md-8">
        <!-- Movie Title -->
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            value="<%= english.title %>"
            required
          />
        </div>
        <div class="mb-3">
          <label for="rating" class="form-label">YearReleased</label>
          <input
            type="number"
            step="0.1"
            class="form-control"
            id="yearReleased"
            name="yearReleased"
            value="<%= webseries.yearReleased %>"
            required
          />
        </div>

        <!-- Rating -->
        <div class="mb-3">
          <label for="contantrating" class="form-label">ContantRating</label>
          <input
            type="number"
            step="0.1"
            class="form-control"
            id="contantrating"
            name="contantrating"
            value="<%= webseries.contantrating %>"
            required
          />
        </div>
        <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input
              type="number"
              step="0.1"
              class="form-control"
              id="rating"
              name="rating"
              value="<%= webseries.rating %>"
              required
            />
          </div>

        <!-- Genres -->
        <div class="mb-3">
          <label for="genre" class="form-label">Genres (comma-separated)</label>
          <input
            type="text"
            class="form-control"
            id="genre"
            name="genre"
            value="<%= english.genre %>"
            required
          />
        </div>

        <!-- Cast -->
        <div class="mb-3">
          <label for="noofSeason" class="form-label">No Of Season</label>
          <input
            type="text"
            class="form-control"
            id="noofSeason"
            name="noofSeason"
            value="<%= webseries.noofSeason %>"
            required
          />
        </div>

        <!-- Runtime -->
        <div class="mb-3">
          <label for="streaming platform" class="form-label">streamingplatform</label>
          <input
            type="text"
            class="form-control"
            id="streamingplatform"
            name="streamingplatform"
            value="<%= webseries.streamingplatform %>"
            required
          />
        </div>

        <!-- Submit & Cancel -->
        <div class="mb-3">
          <button type="submit" class="btn btn-primary">Update Webserirs</button>
          <a href="/webseries" class="btn btn-secondary">Cancel</a>
        </div>
      </div>
    </div>
  </form>
</div>
