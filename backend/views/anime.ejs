<body>
  <main class="main">
    <div class="container-fluid">
      <div class="row">
        <!-- main title -->
        <div class="col-12">
          <div class="main__title">
            <h2>Indian Movies</h2>
            <a href="add-item.html" class="main__title-link">
              <span>Add Item</span>
            </a>
          </div>
        </div>
        <!-- end main title -->
      </div>

      <!-- Search Bar -->
      <div class="row mb-3">
        <div class="col-12">
          <div class="search-container">
            <form action="/anime" method="GET">
              <input
                type="text"
                name="search"
                placeholder="Search Anime..."
                value="<%= searchQuery %>"
              />
              <button type="submit">Search</button>
            </form>
          </div>
        </div>
      </div>

      <div class="row">
        <!-- dashbox -->
        <div class="col-12 col-xl-12">
          <div class="dashbox">
            <div class="dashbox__table-wrap dashbox__table-wrap--1">
              <table class="table text-white" id="moviesTable">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Poster</th>
                    <th>Name</th>
                    <th>Genre</th>
                    <th>Episodes</th>
                    <th>Rating</th>
                    <th>ContentType</th>
                    <th>Trailer</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (!anime || anime.length === 0) { %>
                  <tr>
                    <td colspan="9" class="text-center">No movies found</td>
                  </tr>
                  <% } else { %> <% anime.forEach((anime, index) => { %>
                  <tr class="movie-row">
                    <td><%= (currentPage - 1) * 10 + index + 1 %></td>
                    <td>
                      <img
                        src="<%= anime.PosterUrl ? anime.PosterUrl : '/assets/img/default-poster.jpg' %>"
                        alt="<%= anime.title %> Poster"
                        width="70"
                        onerror="this.onerror=null; this.src='/assets/img/default-poster.jpg';"
                      />
                    </td>
                    <td class="movie-title"><%= anime.title || "N/A" %></td>
                    <td class="movie-genre"><%= anime.genres || "N/A" %></td>
                    <td><%= anime.episodes || "N/A" %></td>
                    <td class="movie-rating"><%= anime.rating || "N/A" %></td>
                    <td class="movie-contenttype">
                      <%= anime.contenttype || "N/A" %>
                    </td>
                    <td>
                      <% if (anime.trailer) { %>
                      <a
                        href="<%= anime.trailer %>"
                        target="_blank"
                        class="btn btn-primary btn-sm"
                      >
                        Watch Trailer
                      </a>
                      <% } else { %>
                      <span>N/A</span>
                      <% } %>
                    </td>
                  </tr>
                  <% }) %> <% } %>
                </tbody>
              </table>

              <!-- Pagination Section -->
              <div class="pagination-container">
                <% if (currentPage > 1) { %>
                <a href="/anime?page=1" class="pagination-btn">« First</a>
                <a
                  href="/anime?page=<%= currentPage - 1 %>"
                  class="pagination-btn"
                  >« Prev</a
                >
                <% } %> <% for (let i = 1; i <= totalPages; i++) { %> <% if (i
                === 1 || i === totalPages || (i >= currentPage - 2 && i <=
                currentPage + 2)) { %>
                <a
                  href="/anime?page=<%= i %>"
                  class="pagination-btn <%= i === currentPage ? 'active' : '' %>"
                >
                  <%= i %>
                </a>
                <% } else if (i === currentPage - 3 || i === currentPage + 3) {
                %>
                <span class="pagination-dots">...</span>
                <% } %> <% } %> <% if (currentPage < totalPages) { %>
                <a
                  href="/anime?page=<%= currentPage + 1 %>"
                  class="pagination-btn"
                  >Next »</a
                >
                <a href="/anime?page=<%= totalPages %>" class="pagination-btn"
                  >Last »</a
                >
                <% } %>
              </div>
              <!-- End Pagination -->
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <script>
    function showSuggestions() {
    let searchValue = document.getElementById("searchInput").value.toLowerCase();
    let suggestionsBox = document.getElementById("suggestions");
    suggestionsBox.innerHTML = "";
    
    if (searchValue.length < 2) {
      suggestionsBox.style.display = "none";
      return;
    }

    let matchedMovies = [];
    let rows = document.querySelectorAll(".movie-row");

    rows.forEach(row => {
      let title = row.querySelector(".movie-title").innerText.toLowerCase();
      if (title.includes(searchValue)) {
        matchedMovies.push(title);
      }
    });

    if (matchedMovies.length === 0) {
      suggestionsBox.style.display = "none";
    } else {
      matchedMovies = [...new Set(matchedMovies)]; // Remove duplicates
      matchedMovies.forEach(movie => {
        let suggestionItem = document.createElement("div");
        suggestionItem.innerText = movie;
        suggestionItem.onclick = function() {
          document.getElementById("searchInput").value = movie;
          suggestionsBox.style.display = "none";
          filterMovies();
        };
        suggestionsBox.appendChild(suggestionItem);
      });
      suggestionsBox.style.display = "block";
    }
  }

    function filterMovies() {
      let searchValue = document
        .getElementById("searchInput")
        .value.toLowerCase();
      let rows = document.querySelectorAll(".movie-row");

      rows.forEach((row) => {
        let title = row.querySelector(".movie-title").innerText.toLowerCase();
        let genre = row.querySelector(".movie-genre").innerText.toLowerCase();
        let rating = row.querySelector(".movie-rating").innerText.toLowerCase();
        let contentType = row
          .querySelector(".movie-contenttype")
          .innerText.toLowerCase();

        if (
          title.includes(searchValue) ||
          genre.includes(searchValue) ||
          rating.includes(searchValue) ||
          contentType.includes(searchValue)
        ) {
          row.style.display = "";
        } else {
          row.style.display = "none";
        }
      });
    }
  </script>
</body>
